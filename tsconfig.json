{
  "ts-node": {
    "transpileOnly": true,
    "swc": true,
    "esm": true
  },
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ESNext"],
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "include": ["src/**/*", "src/index.ts", "../package.json", "../package-lock.json"],
  "exclude": ["node_modules", "src/test", "dist", "build", "documentation"]
}
